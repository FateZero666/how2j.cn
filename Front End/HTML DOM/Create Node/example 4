<script>
var trs = document.getElementsByTagName("tr");
for(var i in trs){
  if(i == 0) continue;
  if(i % 2 == 1) {
    var style=document.createAttribute("style");
    style.nodeValue="background-color:silver;";
    trs[i].setAttributeNode(style);
  }
}
</script>

