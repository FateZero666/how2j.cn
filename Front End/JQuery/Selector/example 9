<style>
table{
border-collapse:collapse;
table-layout:fixed;
width:80%;
}

td{
width:25%
height:30px;
border-bottom-style:solid;
border-bottom-color:lightgray;
border-bottom-width:1;
}
</style>


<script>
$(function(){
  $(".b").click(function(){
     var value = $(this).val();
     $("td[rowspan!=13] " + value).toggle(500);
  });
});
</script>

<table>
 <tr>
  <td rowspan="13" style="vertical-align:top;">
   <button class="b" value=":input">切换所有的：input</button><br>
   <button class="b" value=":button">切换：button</button><br>
   <button class="b" value=":radio">切换：radio</button><br>
   <button class="b" value=":checkbox">切换：checkbox</button><br>
   <button class="b" value=":text">切换：text</button><br>
   <button class="b" value=":password">切换：password</button><br>
   <button class="b" value=":file">切换：file</button><br>
   <button class="b" value=":submit">切换：submit</button><br>
   <button class="b" value=":image">切换：image</button><br>
   <button class="b" value=":reset">切换：reset</button>
  </td>
  <td>说明</td>
  <td>表单对象</td>
  <td>示例</td>
 </tr>
 
