package com.company;


import java.io.*;
import java.util.Scanner;


public class Main {

    public static void judgeFile(String fileName) {

        File f = new File(fileName);

        try(FileReader fr = new FileReader(f)) {
            int size = (int)f.length();
            char[] all = new char[size];
            fr.read(all);
            String temp = String.valueOf(all);
            if(temp.contains("Magic")) {
                System.out.println("找到子目标字符串Magic，在文件：" + fileName);
            }

        } catch (IOException e) {
            e.printStackTrace();
        }

    }

    public static void judgeFolder(String folderName) {

        File f = new File(folderName);
        File[] fs = f.listFiles();

        {
            int size = fs.length;
            for(int i = 0; i < size; ++i) {
                if(fs[i].isFile()) {
                    String name = fs[i].getName();
                    if(name.contains(".java")) {
                        final File temp = fs[i];
                        Thread t = new Thread() {
                            public void run() {
                                Main.judgeFile(temp.getAbsolutePath());
                            }
                        };
                        t.start();
                    }
                } else {
                    Main.judgeFolder(fs[i].getAbsolutePath());
                }
            }
        }

    }

    public static void main(String[] args) {

        Thread t = new Thread() {
            public void run() {
                int second = 0;
                int time = 0;
                while(true) {
                    if(time < 3) {
                        System.out.println("波动拳第"+ (++time) + "拳");
                    } else {
                        time = 0;
                        System.out.println("进入5秒CD时间");
                        try{
                            Thread.sleep(5000);
                        } catch (Exception e) {
                            e.printStackTrace();
                        }
                    }
                    ++second;
                }
            }
        };

        t.start();
    }
}
